{
    "name": "app",
    "version": "1.0.1",
    "description": "3ddx app development 3ddx app development",
    "productDescription": "3ddx app development 3ddx app development",
    "main": "index.js",
    "executableName": "3ddx",
    "repository": {
        "type": "git",
        "url": "https://github.com/alwanlab/3ddx-electron-app.git"
    },
    "scripts": {
        "start": "electron .",
        "build": "electron-packager . app --platform linux --arch x64 --out dist/",
        "buildwin": "electron-packager . app --platform win32 --arch x64 --out dist/",
        "buildmac": "electron-packager . app --platform darwin --arch x64 --out dist/",
        "deb64": "electron-installer-debian --src dist/app-linux-x64/ --dest dist/installers/ --arch amd64",
        "exe": "electron-installer-windows --src dist/app-win32-x64/ --dest dist/installers/",
        "mac": "electron-installer-dmg ./dist/app-darwin-x64/app.app app --out dist/installers/"
    },
    "author": "3ddx",
    "license": "ISC",
    "devDependencies": {
        "electron": "^24.3.1",
        "electron-installer-dmg": "^4.0.0",
        "electron-installer-windows": "^3.0.0"
    },
    "dependencies": {
        "electron-updater": "^5.3.0",
        "request": "^2.88.2"
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [{
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "my_electron_app"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    }
}